{
  "tasks": {
    "build": "deno run --allow-read --allow-write --allow-env src/main.ts",
    "dev": "deno run --allow-read --allow-write --allow-env --watch src/main.ts",
    "test": "deno test src/ --allow-read --allow-env"
  },
  "imports": {
    "preact": "npm:preact@^10.19.3",
    "preact-render-to-string": "npm:preact-render-to-string@^6.3.1",
    "gray-matter": "npm:gray-matter@^4.0.3",
    "marked": "npm:marked@^11.1.1",
    "marked-highlight": "npm:marked-highlight@^2.2.1",
    "highlight.js": "npm:highlight.js@^11.9.0",
    "@std/fs": "jsr:@std/fs@^0.229.0",
    "@std/path": "jsr:@std/path@^0.225.0"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
